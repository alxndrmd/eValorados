
@{
    ViewBag.Title = "Ajustar";
}

<h2>Ajustar</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Almacen</h4>
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            <label class="control-label col-md-2">Tipo Agencia </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Agencia.Id, new SelectList((IEnumerable<eValorados_Web.Models.Agencia>)ViewData["Agencias"], "Id", "Descripcion"))
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tipo Valorado </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Valorado.Id, new SelectList((IEnumerable<eValorados_Web.Models.Valorado>)ViewData["Valorados"], "Id", "Descripcion"))
            </div>
        </div>

        <div class="form-group">
        <label class="control-label col-md-2">Tipo Movimiento </label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TipoMovimienito.Id, new SelectList((IEnumerable<eValorados_Web.Models.TipoMovimiento>)ViewData["TipoMovimienito"], "Id", "Descripcion"))
        </div>
    </div>

        <div class="form-group">
        @Html.TextBoxFor(model => model.Cantidad, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Cantidad)
            @Html.ValidationMessageFor(model => model.Cantidad)
        </div>
    </div>


        <div class="form-group">
            @Html.TextAreaFor(model => model.Razon, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Razon)
                @Html.ValidationMessageFor(model => model.Razon)
            </div>
        </div>
      <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
